{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/person.schema.json",
  "$ref": "#/$defs/Person",
  "$defs": {
    "Person": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "age": {
          "type": "integer",
          "minimum": 0
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "address": {
          "$ref": "#/$defs/Address"
        }
      },
      "required": ["firstName", "lastName", "age", "address"]
    },
    "Address": {
      "type": "object",
      "properties": {
        "streetAddress": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "postalCode": {
          "type": "string"
        }
      },
      "required": ["streetAddress", "city", "state", "postalCode"]
    }
  }
}
